[user]
	name = Tomer Keren
	email = tomer.keren.dev@gmail.com
[diff]
	tool = vimdiff
[difftool]
	prompt = false
[mergetool "vscode"] # Actually used as a difftool. use by adding --tool=vscode
    cmd = code --wait --diff $LOCAL $REMOTE
[alias]
    l = log
    ch = checkout
    master = checkout master
[core]
#	hookspath = /Users/tomer/.git-hooks #FIXME: makes a **single** set of hooks for everybody, not a good idea because it overrides local ones
[commit]
	template = ~/.git_commit_msg.txt
[core]
	excludesfile = ~/.gitignore_global
[status]
	short = true
	branch = true
[url "git@github.com:"]
    insteadOf = github:
[url "git@gitlab.com:"]
    insteadOf = gitlab:
[fetch]
    prune=true
[push]
# Push by default to the tracked remote branch, not the branch that is named the same (useful for PRs)
	default = upstream 
